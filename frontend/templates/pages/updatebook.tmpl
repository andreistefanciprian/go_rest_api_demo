{{define "title"}}Update Book{{end}}

{{define "main"}}

<form method="POST" action="/updatebook">

    <div class="input-group mb-3">
    <span class="input-group-text" id="basic-addon1">Book ID</span>
    <input type="text" class="form-control" placeholder="" aria-label="BookId" aria-describedby="basic-addon1" name="id" required>
    </div>

    <div class="input-group mb-3">
    <span class="input-group-text" id="basic-addon1">Title</span>
    <input type="text" class="form-control" placeholder="" aria-label="Title" aria-describedby="basic-addon1" name="title" required>
    </div>

    <div class="input-group mb-3">
    <span class="input-group-text" id="basic-addon1">Description</span>
    <input type="text" class="form-control" placeholder="" aria-label="Description" aria-describedby="basic-addon1" name="description" required>
    </div>

    <div class="input-group">
    <span class="input-group-text">Content</span>
    <textarea class="form-control" aria-label="Content" placeholder="" name="content" required></textarea>
    </div>

    <br>
    <button type="submit" class="btn btn-outline-primary">Submit</button>
    
</form>
{{end}}